  <CompilerInfo header="package fb.rt.omac;" >
    <Compiler Language="Java" Vendor="IBM" Product="VisualAge" Version="3.0" />
  </CompilerInfo>
  <InterfaceList>
    <EventInputs>
      <Event Name="UNLD" Comment="UNLOAD Request" >
